<!DOCTYPE html>
<html>
<head>
  <title>Teamsite | <%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>
<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <%= link_to "Teamfinder", '#',class:"brand" %>
      <nav class="nav-collapse">
        <ul class="nav">


          <% if user_signed_in? %>
              <li><%= link_to "Home",   market_index_path %></li>
              <li><%= link_to "Marktplatz",market_index_path  %></li>
              <li><%= link_to "Mein Verein",offers_path  %></li>

              <li class="navbar-text" ></li>
              </ul>
              <div class="btn-group pull-right">

                <%= link_to '#',class:'btn dropdown-toggle', 'data-toggle'=>'drop-down' do %>
                    <i class='icon-user'></i><%= current_user.email  %><span class='caret'></span>
                <% end  %>

                <ul class="dropdown-menu">
                  <li><%= link_to "Profile","#" %></li>
                  <li class="divider"></li>
                  <li><%= link_to "Logout",destroy_user_session_path, :method => :delete  %></li>

                </ul>
              </div>
          <% else %>
              <li><%= link_to "Home",   root_path %></li>
              <li><%= link_to "Login", new_user_session_path %> </li>
              <li><%= link_to "Register", new_user_registration_path %> </li>
              </ul>
          <% end %>



      </nav>
    </div>
  </div>
</header>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2" id="leftside">
      <% if content_for?( :leftside ) %>
        <%= yield( :leftside ) %>
      <% else %>
        &nbsp;
      <% end %>
    </div>
    <div class="span6">
        <% unless notice.blank? %>
            <p class="alert alert-info"><%= notice %></p>
        <% end %>
        <% unless alert.blank? %>
            <p class="alert alert-error"><%= alert %></p>
        <% end %>
        <%= yield %>
    </div>
    <div class="span4">
      <% if content_for?( :rightside ) %>
          <%= yield( :rightside ) %>
      <% else %>
          &nbsp;
      <% end %>
    </div>
  </div>

</div>
</body>
</html>
