<%# encoding:UTF-8 %>
<!DOCTYPE html>
<html>
<head>
  <title>Spielertransfer24 | <%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->
</head>
<body>
<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container-fluid">
      <%= link_to "Spielertransfer24 ", root_path,class:"brand" %>
      <div class="nav-collapse">

        <ul class="nav">
          <% if user_signed_in? %>
          <li><%= link_to "Verein suchen",market_index_path if current_user.has_role?(:player) %></li>
          <li><%= link_to "Spieler suchen",players_market_index_path  if (can? :read, PlayerProfile) && (current_user.has_role?(:club)) %></li>

            <li>
            <%# Show new profile only when user doesn't have one and is no club owner %>
                <%= link_to "Spielerprofil anlegen",new_player_profile_path if can? :create, PlayerProfile %>
                <%= link_to "Dein Spielerprofil",player_profile_path(PlayerProfile.with_role(:player,current_user).first) unless PlayerProfile.with_role(:player,current_user).empty? %>
            </li>
            <% if current_user.has_role?(:club)  %>
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">Dein Verein<b class="caret"></b></a>
              <ul class="dropdown-menu">
                <% Club.with_role(:club, current_user).each do |club| %>
                  <li><%= link_to  club.name,club_path(club.id) %></li>
                <% end %>
                <% if can? :create, Club %>

                  <li><%= link_to "Verein anlegen",new_club_path  %></li>
                <% end %>
              </ul>
            </li>
            <% end  %>
            </ul>
            <div class="btn-group pull-right">
              <%= link_to raw("<i class='icon-user'></i> #{current_user.email} <span class='caret'></span>"),'#',class:"btn dropdown-toggle", 'data-toggle'=>"dropdown" %>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile","#" %></li>
                <li class="divider"></li>
                <li><%= link_to "Logout",destroy_user_session_path, :method => :delete  %></li>
              </ul>
            </div>
          <% else %>
              </ul>
              <div class="pull-right">
                <ul class="nav">
                  <li><%= link_to "Einloggen",   new_user_session_path %></li>
                  <li><%= link_to "Anmelden",new_user_registration_path  %></li>
                </ul>
              </div>
          <% end %>
      </div>
    </div>
  </div>
</header>
<div class="container-fluid">
  <div class="row-fluid">
    <div class="span2" id="leftside">
      <% if content_for?( :leftside ) %>
        <%= yield( :leftside ) %>
      <% else %>
        &nbsp;
      <% end %>
    </div>
    <div class="span6">
        <% if notice %>
            <p class="alert alert-info"><%= notice %></p>
        <% end %>
        <% if alert %>
            <p class="alert alert-error"><%= alert %></p>
        <% end %>
        <%= yield %>
    </div>
    <div class="span4">
      <%= render 'layouts/login' %>
      <% if content_for?( :rightside ) %>
          <%= yield( :rightside ) %>
      <% else %>
          &nbsp;
      <% end %>
    </div>
  </div>

</div>

<footer>
  <p>&copy; Spielertransfer24.de</p>
</footer>
</body>
</html>
