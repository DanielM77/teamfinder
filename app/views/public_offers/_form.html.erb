            <%= f.collection_select :min_league_type_id ,LeagueType.all,:id, :name, placeholder:"Mindestliga" %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :season, "Saison", class:"control-label" %>
          <div class="controls">
            <%= f.collection_select(:season_id, Season.all, :id, :name, placeholder:"Saison")  %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :position, "Position", class:"control-label" %>
          <div class="controls">
            <%= f.grouped_collection_select :position_id, PositionGroup.all,
                                            :positions, :name, :id, :name, placeholder:"Position" %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :min_age,"Alter (von - bis)", class:"control-label" %>
          <div class="controls">
            <%= f.text_field :min_age, class:"input-small", placeholder:"von" %>
            <%= f.text_field :max_age, class:"input-small", placeholder:"bis" %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :valid_from,"GÃ¼ltig (von - bis)", class:"control-label" %>
