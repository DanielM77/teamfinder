<h2>Log Dich ein</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name),:html=>{class:'form-horizontal'}) do |f| %>
    <div class="control-group">
      <%= f.label :email,'Email',class:'control-label' %>
      <div class="controls">
        <%= f.email_field :email, class:'input-large', placeholder:'Email' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :password,'Passwort', class:'control-label' %>
      <div class="controls">
        <%= f.password_field :password,class:'input-large',placeholder:'Passwort' %>
        </div>
    </div>
    <% if devise_mapping.rememberable? -%>
    <div class="control-group">
      <div class="controls">
        <%= f.check_box :remember_me %> angemeldet bleiben
      </div>
    </div>
    <% end -%>
    <div class="control-group">
      <div class="controls">
        <%= f.submit "Einloggen",class:'btn btn-primary' %>
      </div>
    </div>
<% end %>

<%= render "links" %>