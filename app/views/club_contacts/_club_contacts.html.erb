<% teams.each do |team| %>
<% unless team.club_contacts.empty? %>
<h4><%= team.name%></h4>
<p></p>
<table class="table">
  <tr>
    <th>Anfrage vom</th>
    <th>Spieler</th>
    <th>Aktuelle Liga</th>
    <th>Status</th>
  </tr>

  <% team.club_contacts.each do |contact| %>
      <tr>
        <td><%= date_formatter(contact.created_at) %></td>
        <td>Spieler <%= contact.player_profile.id unless contact.player_profile.nil? %></td>
        <td><%= contact.player_profile.current_league_type.name unless contact.player_profile.nil? || contact.player_profile.current_league_type.nil? %></td>
        <td><%= contact.status %></td>
      </tr>
  <% end %>
</table>
<% end %>
<% end %>