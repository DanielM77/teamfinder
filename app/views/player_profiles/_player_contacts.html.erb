<table class="table table-bordered table-striped">
  <thead>
  <th>Verein</th>
  <th>Mannschaft</th>
  <th>Position</th>
  <th>Status</th>
  <th></th>
  </thead>
  <tbody>
  <% @player_contacts.each do |contact| %>
      <tr>
        <td><%= contact.public_offer.club.name %> </td>
        <td><%= contact.public_offer.team_type.name %> (<%= contact.public_offer.league.name %>)</td>
        <td><%# contact.public_offer.position.name %></td>
        <td><%= contact.status %></td>
        <td><%= link_to "Details", public_offer_player_contact_path(contact.public_offer,contact),class:'btn btn-mini btn-success' %></td>
      </tr>
  <% end %>
  </tbody>
</table>