
<%= form_for(@club, :html=>{class:'form-horizontal'}) do |f| %>
  <% if @club.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@club.errors.count, "error") %> prohibited this club from being saved:</h2>

      <ul>
      <% @club.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    <%= hidden_field_tag :membership, value:@membership %>
    <div class="control-group">
      <%= f.label :name, "Vereinsname", class:'control-label' %>
        <div class="controls">
          <%= f.text_field :name, placeholder:'Vereinsname' %>
        </div>
    </div>
    <div class="control-group">
      <%= f.label :email,"Email", class:'control-label' %>
      <div class="controls">
        <%= f.email_field :email, placeholder:'Email' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :mobile,"Handy", class:'control-label' %>
      <div class="controls">
        <%= f.text_field :mobile, placeholder:'Handy' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :street, "Straße", class:'control-label' %>

        <div class="controls">
          <%= f.text_field :street, placeholder:'Straße' %>
        </div>
    </div>
      <div class="control-group">
        <%= f.label :zip,"Postleitzahl", class:'control-label' %>
        <div class="controls">
          <%= f.text_field :zip, placeholder:'Postleitzahl' %>
        </div>
    </div>
    <div class="control-group">
      <%= f.label :city,"Stadt", class:'control-label' %>
      <div class="controls">
        <%= f.text_field :city, placeholder:'Stadt' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :phone,"Telefon", class:'control-label' %>
      <div class="controls">
        <%= f.text_field :phone, placeholder:'Telefon' %>
      </div>
    </div>
      <div class="control-group">
        <%= f.label :fax,"Fax", class:'control-label' %>
        <div class="controls">
          <%= f.text_field :fax, placeholder:'Fax' %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :image_path,"Vereinslogo", class:'control-label' %>
        <div class="controls">
          <%= f.file_field :image_path, placeholder:'Vereinslogo' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :homepage,"Homepage", class:'control-label' %>
        <div class="controls">
          <%= f.text_field :homepage, placeholder:'Homepage' %>
        </div>
      </div>
      <div class="control-group">
        <div class="controls">
          <%= f.submit "Absenden", class:'btn btn-primary' %>
        </div>
      </div>
<% end %>
