<% content_for :leftside do %>
    <%= render 'clubs/sidenav' %>
<% end %>
<%= render 'clubs/header' %>
<h3>Meine Spielergesuche</h3>

<table class="table">
  <thead>
    <th>Team</th>
    <th>League</th>
    <th>Season</th>
    <th>Position</th>
    <th>Gültig ab</th>
    <th>Gültig bis</th>
    <th>Anfragen</th>
  </thead>
  <tbody>
<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.team.name %></td>
    <td><%= offer.team.league.name %></td>
    <td><%= offer.season.name %></td>
    <td><%= offer.position.name %></td>
    <td><%= offer.valid_from %></td>
    <td><%= offer.valid_until %></td>
    <td> (<%= link_to offer.contacts.count, offer_contacts_path(offer_id:offer) %>)</td>
  </tr>
<% end %>
  </tbody>
</table>

<br />


